                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Product"
                ],
                "summary": "Create a new product",
                "operationId": "CreateProduct",
                "parameters": [
                    {
                        "description": "Product creation payload",
                        "name": "input",
