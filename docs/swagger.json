                ],
                "description": "Close the last reception for a given PVZ ID. Requires JWT-Token with Employee role.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "PVZ"
                ],
                "summary": "Close Last Reception",
                "operationId": "CloseLastReception",
                "parameters": [
                    {
                        "type": "string",
                        "description": "PVZ ID",
                        "name": "pvzID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully closed last reception",
